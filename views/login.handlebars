 <section class="login-page">
    <div class="form-heading">
        <h1>Log In</h1>
    </div>
    <div class="form-section">
        <form class="login-form">

            <!--username input section-->
            <div>
                <label for="username-login">Username</label>
                <input type="text" class="entry-field" id="username-login" />
            </div>

            <!--password input section-->
            <div>
                <label for="password-login">Password</label>
                <input type="password" class="entry-field" id="password-login" />
            </div>

            <!--LOGIN button-->
            <div>
                <button type="submit" class="login-signup-btn">Log In!</button>
            </div>

        </form>
    </div>

<!---takes user to the sign up page--->
    <a href="/signup" class="sign-in-link">sign up instead</a>
</section>

<!--connect to login js in public javascript-->
<script src="/javascript/login.js"></script>
<!--edit button for editing posts already created by users-->
<a href="/dashboard" class="go-back"> &larr; Back to dashboard</a>

<article class="new-page">

    <section class="edit-form-page">

        <div class="form-heading">
            <h2>
                Edit Post
            </h2>
        </div>

        <div class="form-section">

            <form class="edit-post-form">

<!---allows user to edit title--->
                <div class="post-title-section">
                    <label for="post-title">Title</label>
                    <input type="text" name="post-title" id="post-title" value="{{post.title}}" />
                </div>

<!---allows users to edit the post content--->
                <div class="post-content">
                    <label for="post-content">Content</label>
                    <textarea class="entry-field" id="post-content" name="post-content">{{post.content}}</textarea>
                </div>

<!---gives the user the choice to either post the updated post or delete th e post--->
                <button type="submit">Update post</button>
                <button type="button" class="delete-post-btn">Delete post</button>

            </form>

        </div>

    </section>

</article>

{{#if loggedIn}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
{{/if}}